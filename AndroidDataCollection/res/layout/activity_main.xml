<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            
		    <TextView
		        android:id="@+id/textView1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/hello_world" />
		    
			<Button
		        android:id="@+id/beginEndButton"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/button_begin"
		        />
			
			<TextView
		        android:id="@+id/text_accelerometer_x"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Accelerometer_x: "
				/>
			
		    <TextView
		        android:id="@+id/accelerometer_x"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				/>
			
			<TextView
		        android:id="@+id/text_accelerometer_y"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Accelerometer_y: "
				/>
			
		    <TextView
		        android:id="@+id/accelerometer_y"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				/>	
				
			<TextView
		        android:id="@+id/text_accelerometer_z"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Accelerometer_z: "
				/>
			
		    <TextView
		        android:id="@+id/accelerometer_z"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				/>
		    
		   	<TextView
		        android:id="@+id/text_cellid"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="CellID: "
				/>
			
		    <TextView
		        android:id="@+id/cellId"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				/>
		    
		    <TextView
		        android:id="@+id/text_cellLac"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Cell Location Area Code: "
				/>
		    
		    <TextView
		        android:id="@+id/cellLac"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				/>
		    
		    <TextView
		        android:id="@+id/text_cellNeighbors"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Cell Neighbors: "
				/>
					
		   	<TextView
		        android:id="@+id/cellNeighbors"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:lines="5"
				/>
		    	
		    <TextView
		        android:id="@+id/text_gps_accuracy"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="GPS Accuracy: "
				/>
			
		    <TextView
		        android:id="@+id/gps_accuracy"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				/>
		    
		    <TextView
		        android:id="@+id/text_gps_altitude"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="GPS Altitude: "
				/>
			
		    <TextView
		        android:id="@+id/gps_altitude"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				/>
		    
		    <TextView
		        android:id="@+id/text_gps_latitude"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="GPS Latitude: "
				/>
			
		    <TextView
		        android:id="@+id/gps_latitude"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				/>
		    
		    <TextView
		        android:id="@+id/text_gps_longitude"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="GPS Longitude: "
				/>
			
		    <TextView
		        android:id="@+id/gps_longiitude"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				/>
		    
		    <TextView
		        android:id="@+id/text_gps_bearing"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="GPS Bearing: "
				/>
			
		    <TextView
		        android:id="@+id/gps_bearing"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				/>
		    
		    <TextView
		        android:id="@+id/text_gps_speed"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="GPS Speed: "
				/>
			
		    <TextView
		        android:id="@+id/gps_speed"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>